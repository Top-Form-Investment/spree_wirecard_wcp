<fieldset data-hook="wirecard_checkout_page">
  <legend><%= t(:awirecard_checkout_pagex) %></legend>

  <table class="index">
    <tr>
      <th colspan="4"><%= t(:details) %></th>
    </tr>
    <tr>
      <td><%= label_tag nil, t(:payment_type) %>:</td>
      <td>
        <%= payment.source.payment_type %>
      </td>
      <td><%= label_tag nil, t(:payment_state) %>:</td>
      <td>
        <%= payment.source.payment_state %>
      </td>
    </tr>
    <tr>
      <td><%= label_tag nil, t('wirecard_checkout_page.order_number') %>:</td>
      <td>
        <%= payment.source.order_number %>
      </td>
      <td><%= label_tag nil, t('wirecard_checkout_page.gateway_reference_number') %>:</td>
      <td>
        <%= payment.source.gateway_reference_number %>
      </td>
    </tr>

    <% x=0 %>
    <% payment.source.data.each do |k, v| %>

        <% if x % 2 == 0 %>
            <tr>
        <% end %>
        <td><%= label_tag nil, k %></td>
        <td><%= v %></td>
        <% x+=1 %>
        <% if x % 2 == 0 %>
            </tr>
        <% end %>
    <% end %>
    <% if x % 2 != 0 %>
        <td></td>
        <td></td>
        </tr>
    <% end %>

  </table>
</fieldset>

